CREATE TABLE IF NOT EXISTS "__EFMigrationsHistory" (
    "MigrationId" character varying(150) NOT NULL,
    "ProductVersion" character varying(32) NOT NULL,
    CONSTRAINT "PK___EFMigrationsHistory" PRIMARY KEY ("MigrationId")
);

START TRANSACTION;

CREATE TABLE "CategoriaProduto" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Descricao" character varying(100) NOT NULL,
    CONSTRAINT "PK_CategoriaProduto" PRIMARY KEY ("Id")
);

CREATE TABLE "Estado" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Uf" character varying(2) NOT NULL,
    CONSTRAINT "PK_Estado" PRIMARY KEY ("Id")
);

CREATE TABLE "ListaPreco" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Descricao" character varying(50) NOT NULL,
    CONSTRAINT "PK_ListaPreco" PRIMARY KEY ("Id")
);

CREATE TABLE "Produto" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Nome" character varying(100) NOT NULL,
    "Preco" numeric NOT NULL,
    "Codigo" text NOT NULL,
    "CategoriaId" bigint NOT NULL,
    CONSTRAINT "PK_Produto" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Produto_CategoriaProduto_CategoriaId" FOREIGN KEY ("CategoriaId") REFERENCES "CategoriaProduto" ("Id") ON DELETE CASCADE
);

CREATE TABLE "Cidade" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Nome" character varying(100) NOT NULL,
    "EstadoId" bigint NOT NULL,
    CONSTRAINT "PK_Cidade" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Cidade_Estado_EstadoId" FOREIGN KEY ("EstadoId") REFERENCES "Estado" ("Id") ON DELETE CASCADE
);

CREATE TABLE "Imagem" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Nome" character varying(40) NOT NULL,
    "NomeArquivo" text NOT NULL,
    "Principal" boolean NOT NULL,
    "ProdutoId" bigint NULL,
    CONSTRAINT "PK_Imagem" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Imagem_Produto_ProdutoId" FOREIGN KEY ("ProdutoId") REFERENCES "Produto" ("Id")
);

CREATE TABLE "ListaPrecoProduto" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "ProdutoId" bigint NOT NULL,
    "ListPrecoId" bigint NOT NULL,
    "ListaPrecoId" bigint NOT NULL,
    "PrecoVenda" numeric NOT NULL,
    "PerdentualDescontoMaximo" double precision NOT NULL,
    "PercentualAcrescimoMaximo" double precision NOT NULL,
    CONSTRAINT "PK_ListaPrecoProduto" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_ListaPrecoProduto_ListaPreco_ListaPrecoId" FOREIGN KEY ("ListaPrecoId") REFERENCES "ListaPreco" ("Id") ON DELETE CASCADE,
    CONSTRAINT "FK_ListaPrecoProduto_Produto_ProdutoId" FOREIGN KEY ("ProdutoId") REFERENCES "Produto" ("Id") ON DELETE CASCADE
);

CREATE TABLE "Endereco" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Logradouro" character varying(100) NOT NULL,
    "Bairro" character varying(80) NOT NULL,
    "Cep" character varying(8) NOT NULL,
    "Numero" character varying(10) NOT NULL,
    "Complemento" character varying(150) NOT NULL,
    "CidadeId" bigint NOT NULL,
    CONSTRAINT "PK_Endereco" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Endereco_Cidade_CidadeId" FOREIGN KEY ("CidadeId") REFERENCES "Cidade" ("Id") ON DELETE CASCADE
);

CREATE TABLE "Pessoa" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Nome" character varying(100) NOT NULL,
    "TipoPessoa" integer NOT NULL,
    "Cpf" character varying(11) NOT NULL,
    "InscricaoFederal" character varying(14) NOT NULL,
    "EnderecoId" bigint NOT NULL,
    CONSTRAINT "PK_Pessoa" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Pessoa_Endereco_EnderecoId" FOREIGN KEY ("EnderecoId") REFERENCES "Endereco" ("Id") ON DELETE CASCADE
);

CREATE TABLE "Vendedor" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "Nome" character varying(100) NOT NULL,
    "EnderecoId" bigint NOT NULL,
    CONSTRAINT "PK_Vendedor" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Vendedor_Endereco_EnderecoId" FOREIGN KEY ("EnderecoId") REFERENCES "Endereco" ("Id") ON DELETE CASCADE
);

CREATE TABLE "ListaPrecoVendedor" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "VendedorId" bigint NOT NULL,
    "ListaPrecoId" bigint NOT NULL,
    CONSTRAINT "PK_ListaPrecoVendedor" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_ListaPrecoVendedor_ListaPreco_ListaPrecoId" FOREIGN KEY ("ListaPrecoId") REFERENCES "ListaPreco" ("Id") ON DELETE CASCADE,
    CONSTRAINT "FK_ListaPrecoVendedor_Vendedor_VendedorId" FOREIGN KEY ("VendedorId") REFERENCES "Vendedor" ("Id") ON DELETE CASCADE
);

CREATE TABLE "Pedido" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "PessoaId" bigint NOT NULL,
    "VendedorId" bigint NOT NULL,
    "NumeroPedido" integer NOT NULL,
    "DataPedido" timestamp with time zone NOT NULL,
    CONSTRAINT "PK_Pedido" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_Pedido_Pessoa_PessoaId" FOREIGN KEY ("PessoaId") REFERENCES "Pessoa" ("Id") ON DELETE CASCADE,
    CONSTRAINT "FK_Pedido_Vendedor_VendedorId" FOREIGN KEY ("VendedorId") REFERENCES "Vendedor" ("Id") ON DELETE CASCADE
);

CREATE TABLE "ProdutoPedido" (
    "Id" bigint GENERATED BY DEFAULT AS IDENTITY,
    "ProdutoId" bigint NOT NULL,
    "Quantidade" double precision NOT NULL,
    "PrecoVenda" numeric NOT NULL,
    "DescontoPraticado" double precision NOT NULL,
    "ListaPrecoId" bigint NULL,
    "PedidoId" bigint NULL,
    CONSTRAINT "PK_ProdutoPedido" PRIMARY KEY ("Id"),
    CONSTRAINT "FK_ProdutoPedido_ListaPreco_ListaPrecoId" FOREIGN KEY ("ListaPrecoId") REFERENCES "ListaPreco" ("Id"),
    CONSTRAINT "FK_ProdutoPedido_Pedido_PedidoId" FOREIGN KEY ("PedidoId") REFERENCES "Pedido" ("Id"),
    CONSTRAINT "FK_ProdutoPedido_Produto_ProdutoId" FOREIGN KEY ("ProdutoId") REFERENCES "Produto" ("Id") ON DELETE CASCADE
);

CREATE INDEX "IX_Cidade_EstadoId" ON "Cidade" ("EstadoId");

CREATE INDEX "IX_Endereco_CidadeId" ON "Endereco" ("CidadeId");

CREATE INDEX "IX_Imagem_ProdutoId" ON "Imagem" ("ProdutoId");

CREATE INDEX "IX_ListaPrecoProduto_ListaPrecoId" ON "ListaPrecoProduto" ("ListaPrecoId");

CREATE INDEX "IX_ListaPrecoProduto_ProdutoId" ON "ListaPrecoProduto" ("ProdutoId");

CREATE INDEX "IX_ListaPrecoVendedor_ListaPrecoId" ON "ListaPrecoVendedor" ("ListaPrecoId");

CREATE INDEX "IX_ListaPrecoVendedor_VendedorId" ON "ListaPrecoVendedor" ("VendedorId");

CREATE INDEX "IX_Pedido_PessoaId" ON "Pedido" ("PessoaId");

CREATE INDEX "IX_Pedido_VendedorId" ON "Pedido" ("VendedorId");

CREATE INDEX "IX_Pessoa_EnderecoId" ON "Pessoa" ("EnderecoId");

CREATE INDEX "IX_Produto_CategoriaId" ON "Produto" ("CategoriaId");

CREATE INDEX "IX_ProdutoPedido_ListaPrecoId" ON "ProdutoPedido" ("ListaPrecoId");

CREATE INDEX "IX_ProdutoPedido_PedidoId" ON "ProdutoPedido" ("PedidoId");

CREATE INDEX "IX_ProdutoPedido_ProdutoId" ON "ProdutoPedido" ("ProdutoId");

CREATE INDEX "IX_Vendedor_EnderecoId" ON "Vendedor" ("EnderecoId");

